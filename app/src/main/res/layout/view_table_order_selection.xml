<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="order"
            type="com.findbulous.pos.Order" />
    </data>

    <LinearLayout
        android:id="@+id/view_table_order_selection_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_corner_nopadding"
        android:padding="5dp">

        <TextView
            android:id="@+id/order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text='@{String.format("%s", order.date_order)}'
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text='@{String.format("#%d", order.order_id)}'
            android:layout_weight="1"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text='@{String.format("%s", order.customer.customer_name)}'
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:text='@{order.display_amount_total}'/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAlignment="center"
            android:text='@{String.format("%s", order.state_name)}'
            android:layout_weight="1"/>



    </LinearLayout>
</layout>