<resources>
<!--Theme.MaterialComponents.DayNight.DarkActionBar-->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/raisinBlack</item>
        <item name="colorPrimaryDark">@color/raisinBlack</item>
        <item name="colorAccent">@color/raisinBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/no_animate</item>
        <item name="android:activityOpenExitAnimation">@anim/no_animate</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_animate</item>
        <item name="android:activityCloseExitAnimation">@anim/no_animate</item>
    </style>

    <style name="CustomTabAllCapsFalse" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/roboto_medium </item>
    </style>
    
    <style name="ImageWithRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

